<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mainIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/sun2"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/todayrep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Austin,TX"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:background="#CDF68D1C"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/temp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:gravity="center_horizontal"
            android:text="80"
            android:textColor="@color/white"
            app:autoSizeTextType="uniform"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/temp2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@+id/temp"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:text="H 90 L 78"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:autoSizeTextType="uniform"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/temp"
            android:text="Wed"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/day3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/day2"
            android:text="Thus"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/day4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/day3"
            android:text="Fri"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck" />

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/day2"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/temp2"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cloud"
            android:layout_toRightOf="@+id/icon1"
            android:layout_below="@+id/day3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cloud"
            android:layout_toRightOf="@+id/icon2"
            android:layout_below="@+id/day4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="55dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_gravity="end"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"/>

</LinearLayout>